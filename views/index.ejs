<!DOCTYPE html>
<html lang="sv">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="css/styles.css">
    <title>Sparade kurser</title>
</head>

<body>
    <%- include("partials/nav") %>
    <h1>Sparade kurser</h1>
    <% if (courses.length === 0) { %>
        <p>Inga kurser hittades.</p>
    <% } else { %>
        <!-- Table to display courses -->
        <table>
            <thead>
                <tr>
                    <th>Kurskod</th>
                    <th>Kursnamn</th>
                    <th>Progression</th>
                    <th>Syllabus</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                <% courses.forEach(course => { %>
                    <tr>
                        <td><%= course.course_code %></td>
                        <td><%= course.course_name %></td>
                        <td><%= course.course_progression %></td>
                        <td>
                            <a href="<%= course.course_syllabus %>" target="_blank">Visa</a>
                        </td>
                        <td>
                            <form action="/delete/<%= course.id %>" onsubmit="return confirm('Är du säker på att du vill ta bort denna kurs?')">
                                <button type="submit" class="delete-btn">Ta bort</button>
                            </form>
                        </td>
                    </tr>
                <% }); %>
            </tbody>
        </table>
    <% } %>
</body>

</html>